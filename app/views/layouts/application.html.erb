<!DOCTYPE html>
<html>
<head>
  <title>Raddits</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header class="navbar navbar-default" role="navigation">
  <div class="navbar-inner">
    <div class="container">
      <div id="logo" class="navbar-brand"><%= link_to "Raddits", root_path %></div>
      <nav class="collapse navbar-collapse navbar-ex1-collapse">
        <% if user_signed_in? %>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Submit Link', new_link_url %></li>
            <li><%= link_to 'Account', edit_user_registration_url %></li>
            <li><%= link_to 'Sign Out', destroy_user_session_url, :method => 'delete' %></li>
          </ul>
          <% else %>
            <ul class="nav navbar-nav pull-right">
              <li><%=link_to 'Sign In', new_user_session_url %></li>
              <li><%= link_to 'Sign Up', new_user_registration_url %></li>
            </ul>
          <% end %>
      </nav>
    </div>
  </div>
</header>

<% if notice.present? %>
  <div class="container">
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  </div>
<% end %>
<%= yield %>

</body>
</html>
