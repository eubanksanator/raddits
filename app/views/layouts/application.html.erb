<!DOCTYPE html>
<html>
<head>
  <title>Raddits</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if user_signed_in? %>
  <ul>
    <li><%= link_to 'Submit Link', new_link_url %></li>
    <li><%= link_to 'Account', edit_user_registration_url %></li>
    <li><%= link_to 'Sign Out', destroy_user_session_url, :method => 'delete' %></li>
  </ul>
  <% else %>
  <%=link_to 'Sign In', new_user_session_url %>
  <%= link_to 'Sign Up', new_user_registration_url %>
<% end %>

<%= yield %>

</body>
</html>
